<h1>{{section.settings.heading}}</h1>

<div class="faq">
{% for block in section.blocks %}
  {% if block.type == 'QA' %}
    <div class="question">
      <input type="checkbox" id="question-{{forloop.index}}" class="question-toggle">
      <label for="question-{{forloop.index}}" class="question-label">{{block.settings.question}}</label>
      <div class="answer">
      {{block.settings.answer}}
      </div>
    </div>
    {% elsif block.type == 'headline' %}
    <h4>{{block.settings.title}}</h4>
    {% endif %}

{% endfor %}


{% schema %}

{
    "name": "customer questions",
    "settings": [
        {
        "type": "text",
        "label": "heading for faq",
        "id": "heading"    

        },
        {
        "type": "text",
        "label": "question for faq",
        "id": "question"    

        },
        {
        "type": "textarea",
        "label": "answer for faq",
        "id": "answer"    

        }

        
    ],
    "blocks":[
        {   
            "type":"QA",
            "name":"Question/Answer",
            "settings":[
                    {
                    "type": "text",
                    "label": "customer questions",
                    "id": "question"    

                    },
                    {
                    "type": "richtext",
                    "label": "answer for faq",
                    "id": "answer"    

                    }
                    
            ]

        },
                    {   
            "type":"headline",
            "name":"Headline",
            "settings":[
                    {
                    "type": "text",
                    "label": "Question Headline",
                    "id": "headline"    

                    }
                    
                    
            ]

        }
    ]

}
{% endschema %}